{application, 'katipo',
 [{description, "HTTP client based on libcurl"},
  {vsn, "0.2.0"},
  {registered, []},
  {mod, {'katipo_app', []}},
  {applications,
   [kernel,
    stdlib,
    cowlib,
    gproc,
    uri,
    quintana
   ]},
  {env,[
        {max_pipeline_length, 100},
        {pipelining, false},
        {pool_type, round_robin}
       ]},
  {modules, []},
  {maintainers, ["Paul Oliver"]},
  {licenses, ["MIT"]},
  {links, [{"Github", "https://github.com/puzza007/katipo"}]}
 ]}.
